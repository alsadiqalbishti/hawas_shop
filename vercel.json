{
    "version": 2,
    "rewrites": [
        {
            "source": "/product/:id",
            "destination": "/public/product.html"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/public/$1"
        }
    ]
}